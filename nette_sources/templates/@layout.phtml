<script>
    jQuery(function($) {
        $('#crop').Jcrop({
        	minSize: [120,150],
        	aspectRatio: 4/5,
        	onChange: enableCrop,
			onSelect: enableCrop
        });
    });
    
    function enableCrop(c) {
    	$('#x').val(c.x);
		$('#y').val(c.y);
    	$('#w').val(c.w);
		$('#h').val(c.h);
    }
    
    function doCrop() {
    	var x = $('#x').val();
    	var y = $('#y').val();
    	var w = $('#w').val();
    	var h = $('#h').val();
    	
    	if (w==0 || h==0) { alert({_"Please select first a part of the image."}); return false };
	
		window.location=this.location+'&do=crop&x='+x+'&y='+y+'&w='+w+'&h='+h;
		
    }
</script>
