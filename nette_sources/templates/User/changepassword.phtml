{var load_js_css_zxcvbn => true}
{block title}{_"Change password"}{/block}
{block content}
<div class="wrapper-text">
	<h3>{_"Please enter your new password"}</h3>
	{control changepasswordform}
</div>

<script>
	var oldText,oldRepeat;
	$(document).ready(function(){
		$("#frmchangepasswordform-user_password").keyup(function(){
			var color;
			var password = $("#frmchangepasswordform-user_password").val();
			if (password == oldText) { return true;}
			var user_inputs = new Array();
			user_inputs.push = {$username};
			var result = zxcvbn(password,user_inputs);
			switch(result.score) {
				case 0: color = "#FF0000"; break;
				case 1: color = "#FFBF00"; break;
				case 2: color = "#FFFF00"; break;
				case 3: color = "#80FF00"; break;
				case 4: color = "#01DF01"; break;
			}
			$('#frmchangepasswordform-user_password').css({ "background-color":color});			
			oldText = password;
			oldRepeat = "";
		});
		$("#frmchangepasswordform-user_password_again").keyup(function(){ comparePasswords()});
		$("#frmchangepasswordform-user_password").keyup(function(){ comparePasswords()});
	});
	
	function comparePasswords(){
			var color;
			var again = $("#frmchangepasswordform-user_password_again").val();
			if (again == oldRepeat) { return true;}
			var password = $("#frmchangepasswordform-user_password").val();
			if ((again.length == 0) || (password == again)) {
				color = "transparent";
			} else {
				color = "#FF0000";
			}
			if (color != '') {
				$('#frmchangepasswordform-user_password_again').css({ "background-color":color});
			}
			oldText = password;
			oldRepeat = again;
		}
		
	function conditions(password) {
		if (password.length < 8) return false;
		
		var testUpper = new RegExp("[A-Z]+");
		var testLower = new RegExp("[a-z]+");
		var testNumber = new RegExp("[0-9]+");

		if (testUpper.test(password) && testLower.test(password) && testNumber.test(password)) {
			return true;
		} else {
			return false;
		}
	}

</script>
