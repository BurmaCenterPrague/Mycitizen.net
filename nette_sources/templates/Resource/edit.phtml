{ifset $screenshot}	
<script>
	$(document).ready(function(){
		var src = $("#screenshot").attr("newsrc");
		var d = new Date();
		if ((typeof src != 'undefined') && (src != '')) {
			setTimeout(function(){
				var img = new Image();
				img.onload = function() {
					$("#screenshot").hide();
					$("#screenshot").attr("src", src+"?"+d.getTime());
					$("#screenshot").show();
				};
				img.onerror = function() {
					setTimeout(function(){
						$("#screenshot").hide();
						$("#screenshot").attr("src", src+"?"+d.getTime());
						$("#screenshot").show();					
					},15000);
 				};
 				img.src = src;
			},2000);
		}
	});
</script>
